@model dynamic

@{
    ViewBag.Title = "Rifornimento";
}
@{
    Layout = "_LayoutAdminRifornimento";
}


<div class="container-fluid sfondoVerde">
    <h1 class="col-12 text-center titolo pt-3 pb-0">Rifornimento</h1>
	<h2 class="col-12 text-center pt-0 pb-3">@Model.Prodotti.Nome</h2>
	<hr />

               <form method="post" action="@Url.Action("Rifornimento", "Admin")" class="row">
	            @Html.AntiForgeryToken()	        
		        <div class="mb-3 col-md-6 col-12">
		            <label for="input-fornitore"  class="control-label">Nome Fornitore:</label>
		            <input type="text" name="nomeFornitore"  id="FormModifica"> 
	            </div>
                <div class="mb-3 col-md-6 col-12">
		            <label for="input-quantita" class="control-label">Quantita da rifornire:</label>
		            <input type="number" name="quantitaDaAggiungere" id="FormModifica">
	            </div>                  
                <div class=" col-12 text-center">
                    <a class="btn btn-secondary"asp-controller="Admin" asp-action="Index">Annulla</a>
                    <button type="submit" class="btn sfondoVerdeBottone shadow-lg">Conferma rifornimento</button>
                </div>
	           </form> 
</div>


<div>

    @if (Model.Rifornimenti.Count == 0){
        <h2 class="col-12 text-center p-3">Non sono ancora stati effettuati rifornimenti per questo prodotto</h2>
    } else
    {
        <h2>Rifornimenti effettuati:</h2>
		<table class="table"id="unseen">
            <thead>
                <tr>
                <th class="numeric">Fornitore</th>
                <th class="numeric">Quantità</th>
                <th class="numeric">Data</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var rifornimento in Model.Rifornimenti) {      
                    <tr>
                    <td data-label="Fornitore">
                        @rifornimento.NomeFornitore
                    </td>
                    <td data-label="Quantità" class="numeric">
                        @rifornimento.QuantitaDaAggiungere
                    </td>                     
                    <td data-label="Data">
                        @rifornimento.DataRifornimento
                    </td>                
                    </tr>
            } 
            </tbody>
        </table>
    }
	

</div>







