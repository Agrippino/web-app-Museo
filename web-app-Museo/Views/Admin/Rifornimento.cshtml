@model dynamic

@{
    ViewBag.Title = "Rifornimento";
}

<h1>Stato Magazzino</h1>

<div class="container-fluid sfondoBlu">
    <h1 class="col-12 text-center titolo p-3">Modifica</h1>
    <hr />
               <form method="post" action="@Url.Action("Rifornimento", "Admin")" class="row">
	         @Html.AntiForgeryToken()
	        
		        <div class="mb-3 col-md-6 col-12">
		            <strong>Nome Fornitore:</strong>
		            <input name="nomeFornitore"> 
	            </div>
            <div class="mb-3 col-md-6 col-12">
		        <strong>Quantita da rifornire:</strong>
		        <input type="number" class="d-block w-100" name="quantitaDaAggiungere"> 
	        </div>        
            
              <div class="modal-footer col-12 text-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <button type="submit" class="btn btn-primary btn-info">Conferma rifornimento</button>
              </div>
	          </form> 
</div>

<div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">

          <div class="col">
            <div class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg" style="background-image: url('@Model.QuantitaDisponibili.Immagine');">
              <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                <h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">@Model.QuantitaDisponibili.Nome</h2>
                <ul class="d-flex list-unstyled mt-auto">
                  <li class="d-flex align-items-center me-3">
                    <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill"/></svg>
                    <small>Model.QuantitaDisponibili.Categoria</small>
                  </li>
                  <li class="d-flex align-items-center">
                    <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"/></svg>
                    <small>@Model.QuantitaDisponibili.QuantitaTotale</small>
                  </li>
                </ul>
              </div>
            </div>
          </div>
         
</div>

@foreach(var rifornimento in Model.Rifornimenti){
    <h1>@rifornimento.DataRifornimento</h1>
}

