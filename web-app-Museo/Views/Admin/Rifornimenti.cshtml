@model Prodotto

<div class="container">
	<div class="row">
		 <form method="post" action="@Url.Action("Rifornimento", "Admin")">
	 @Html.AntiForgeryToken()

	 <div class="mb-3">
		 <strong>La quantità dint @Model.Nome è di @Model.QuantitaDisponibile</strong>
		<strong>Inserisci qui il numero di unità per il rifornimento:</strong>
		<input asp-for="QuantitaDisponibile" class="d-block w-100" />
		<span asp-validation-for="QuantitaDisponibile" class="text-danger"></span>
	</div>  
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
        <button type="submit" class="btn btn-primary btn-info">Rifornisci</button>
      </div>
	 </form>

	</div>
</div>
